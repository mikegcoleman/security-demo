<%- include('layout', {body: `
<div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="bg-white rounded-2xl shadow-xl p-8 mb-8 border-t-4 border-accent">
        <div class="flex items-center justify-between mb-6">
            <div>
                <h1 class="text-3xl font-bold text-dark flex items-center">
                    <i class="fas fa-tasks text-accent mr-3"></i>
                    Todo Dashboard
                </h1>
                <p class="text-gray-600 mt-2">Manage your tasks and stay organized</p>
            </div>
            <div class="text-right">
                <div class="text-2xl font-bold text-accent">${todos.filter(t => !t.completed).length}</div>
                <div class="text-sm text-gray-600">Pending Tasks</div>
            </div>
        </div>

        <!-- Add Todo Form -->
        <form method="POST" action="/todos" class="bg-gray-50 rounded-xl p-6 border-2 border-dashed border-accent border-opacity-30">
            <h3 class="text-lg font-semibold text-dark mb-4">
                <i class="fas fa-plus-circle text-accent mr-2"></i>
                Add New Todo
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                    <label for="title" class="block text-sm font-medium text-dark mb-2">Title</label>
                    <input 
                        type="text" 
                        id="title" 
                        name="title" 
                        required
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent focus:border-accent"
                        placeholder="Enter task title"
                    />
                </div>
                <div>
                    <label for="description" class="block text-sm font-medium text-dark mb-2">Description</label>
                    <input 
                        type="text" 
                        id="description" 
                        name="description"
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent focus:border-accent"
                        placeholder="Enter description (optional)"
                    />
                </div>
                <div class="flex items-end">
                    <button 
                        type="submit" 
                        class="w-full bg-gradient-to-r from-accent to-primary text-white font-bold py-3 px-4 rounded-lg hover:opacity-90 transition-opacity"
                    >
                        <i class="fas fa-plus mr-2"></i>Add Todo
                    </button>
                </div>
            </div>
        </form>
    </div>

    <!-- Todos List -->
    <div class="space-y-4">
        ${todos.length === 0 ? `
        <div class="bg-white rounded-xl shadow-lg p-8 text-center border-l-4 border-primary">
            <div class="w-16 h-16 bg-primary bg-opacity-10 rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="fas fa-clipboard-list text-primary text-2xl"></i>
            </div>
            <h3 class="text-xl font-semibold text-dark mb-2">No todos yet!</h3>
            <p class="text-gray-600">Create your first todo item to get started.</p>
        </div>
        ` : ''}

        ${todos.map(todo => `
        <div class="bg-white rounded-xl shadow-lg border-l-4 ${todo.completed ? 'border-success' : 'border-warning'} hover:shadow-xl transition-shadow">
            <div class="p-6">
                <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-4 flex-1">
                        <div class="flex-shrink-0">
                            <div class="w-6 h-6 rounded-full ${todo.completed ? 'bg-success' : 'bg-warning'} flex items-center justify-center">
                                <i class="fas ${todo.completed ? 'fa-check' : 'fa-clock'} text-white text-sm"></i>
                            </div>
                        </div>
                        
                        <div class="flex-1">
                            <h3 class="text-lg font-semibold ${todo.completed ? 'text-gray-500 line-through' : 'text-dark'}">
                                ${todo.title}
                            </h3>
                            ${todo.description ? `
                            <p class="text-gray-600 mt-1">${todo.description}</p>
                            ` : ''}
                            <div class="flex items-center mt-2 text-sm text-gray-500 space-x-4">
                                <span>
                                    <i class="fas fa-user mr-1"></i>
                                    ${todo.username || 'Unknown'}
                                </span>
                                <span>
                                    <i class="fas fa-calendar mr-1"></i>
                                    ${new Date(todo.created).toLocaleDateString()}
                                </span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="flex items-center space-x-2 flex-shrink-0">
                        <!-- Toggle Status Form -->
                        <form method="POST" action="/todos/${todo._id}/toggle" class="inline">
                            <button 
                                type="submit" 
                                class="px-4 py-2 rounded-lg font-medium transition-colors ${todo.completed ? 'bg-warning hover:bg-orange-600 text-white' : 'bg-success hover:bg-green-600 text-white'}"
                            >
                                <i class="fas ${todo.completed ? 'fa-undo' : 'fa-check'} mr-1"></i>
                                ${todo.completed ? 'Reopen' : 'Complete'}
                            </button>
                        </form>
                        
                        <!-- Delete Form -->
                        <form method="POST" action="/todos/${todo._id}/delete" class="inline">
                            <button 
                                type="submit" 
                                onclick="return confirm('Are you sure you want to delete this todo?')"
                                class="px-4 py-2 bg-danger hover:bg-red-600 text-white rounded-lg font-medium transition-colors"
                            >
                                <i class="fas fa-trash mr-1"></i>
                                Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        `).join('')}
    </div>

</div>

`, title: 'Todos - TaskFlow'}) %>